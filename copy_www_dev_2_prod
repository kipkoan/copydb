echo -e "\n********************************************************************************"
echo -e "*                            !!!!!  WARNING !!!!!                              *"
echo -e "* This script will overwrite the PRODUCTION database with the contents of the  *"
echo -e "* Development database.  This process is irreversable.  Are you sure you want  *"
echo -e "* to do this?  If so, confirm by entering \"CONFIRM\" in all caps (without the   *"
echo -e "* quotes) at the prompt below.                                                 *"
echo -e "********************************************************************************"
echo -e "\n"
read -p "Are you sure? " confirm

if [ $confirm != "CONFIRM" ]; then
  echo -e "Exiting program without making any changes\n"
  exit
fi

read -s -p "Password: " mypassword
echo -e "\n"

echo -e 'mysql -u root -p www_prod < mkproddrupal.sql'
mysql -u root -p$mypassword < mkproddrupal.sql

echo -e '\nmysqldump -u root -p www_dev > output.www_dev.sql'
mysqldump -u root -p$mypassword www_dev > output.www_dev.sql

echo -e '\nmysql -u root -p www_prod < output.www_dev.sql'
mysql -u root -p$mypassword www_prod < output.www_dev.sql

echo -e "\n"
